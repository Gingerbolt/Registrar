<html>
    <head>
        <title>Epicodus University Registrar | Courses</title>
    </head>
    <body>
        <h1>Epicodus University Registrar | Courses</h1>
        <form action="/courses" name="courses" method="post">
            <label for="course_name">Enter A Course Name: </label>
            <input type="text" name="course_name" required>

            <label for="course_number">Course Number: </label>
            <input type="text" name="course_number" required>

            <button type="submit" name="courses">Add Course</button>
        </form>

        {% if courses is not empty %}
            {% for course in courses %}
                <h4>Course Name: <a href="/course/{{ course.getId }}">{{ course.getCourseName }}</a></h4>
                <p>Course Number: {{ course.getCourseNumber }}</p>
            {% endfor %}
        {% endif %}

        <h4><a href="/">Home</a></h4>
    </body>
</html>
